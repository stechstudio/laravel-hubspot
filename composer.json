{
    "name": "stechstudio/laravel-hubspot",
    "description": "A Laravel SDK for the HubSpot CRM Api",
    "keywords": [
        "stechstudio",
        "laravel",
        "hubspot"
    ],
    "homepage": "https://github.com/stechstudio/laravel-hubspot",
    "license": "MIT",
    "authors": [
        {
            "name": "Joseph Szobody",
            "email": "joseph@stechstudio.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^9.0|^10.0|^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.5",
        "nunomaduro/collision": "^6.4",
        "larastan/larastan": "^2.4.1",
        "orchestra/testbench": "^7.22",
        "pestphp/pest": "^1.22",
        "pestphp/pest-plugin-laravel": "^1.1",
        "pestphp/pest-plugin-parallel": "^1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6",
        "spatie/laravel-ray": "^1.32"
    },
    "autoload": {
        "psr-4": {
            "STS\\HubSpot\\": "src",
            "STS\\HubSpot\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "STS\\HubSpot\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "STS\\HubSpot\\HubSpotServiceProvider"
            ],
            "aliases": {
                "HubSpot": "STS\\HubSpot\\Facades\\HubSpot"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
